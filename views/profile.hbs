<h1>My profile</h1>
<div class="profile-info-container">

  <aside class="profile-picture">
    <img src="{{userData.profilePicture}}" alt="Profile Picture" srcset="" />
    <button id="change-password">Change Password</button>
  </aside>

  <main class="main-info" id="main-info">
    <h2 class="title">Hello There, {{userData.name}}</h2>

    <div class="form-container" id="general-form">
      <button class="edit-btn" id="edit-btn">
        <i class="uil uil-edit"></i>
      </button>
      <form class="profile-form" action="#" method="post">
        <div class="profile-input-box">
          <label for="name">Name</label>
          <input
            class="read-only"
            type="text"
            name="name"
            disabled
            value="`{{userData.name}}`"
          />
        </div>

        <div class="profile-input-box">
          <label for="email">Email:</label>
          <input
            class="read-only"
            type="email"
            name="email"
            disabled
            value="{{userData.email}}"
          />
        </div>

        <div class="profile-input-box">
          <label for="birthday">Birthday</label>
          <input
            class="read-only"
            type="date"
            name="birthday"
            disabled
            {{userData.birthday}}
          />
        </div>

        <div class="profile-input-box is-hidden">
          <label for="password">Password</label>
          <input
            class="read-only is-hidden"
            type="password"
            name="name"
            disabled
            placeholder="Enter your Password"
          />
        </div>

        <div class="profile-input-box is-hidden">
          <label for="confirm-password ">Confirm Password</label>
          <input
            class="read-only"
            type="password"
            name="confirm-password"
            disabled
            placeholder="Confirm your Password"
          />
        </div>

        <button class="save-btn" id="save-btn">Save Changes</button>
      </form>
        
     </div>

     <div class="form-container is-hidden" id="password-form">
      
      <form class="profile-form" action="#" method="post">
       
        <div class="profile-input-box">
          <label for="password">Password</label>
          <input
            class="read-only"
            type="password"
            name="name"

            placeholder="Enter your Password"
          />
        </div>
         <div class="profile-input-box">
          <label for="new-password ">New Password</label>
          <input
            class="read-only"
            type="password"
            name="new-password"
            
            placeholder="Enter your New Password"
          />
        </div>

        <div class="profile-input-box">
          <label for="confirm-password ">Confirm Password</label>
          <input
            class="read-only"
            type="password"
            name="confirm-password"
            
            placeholder="Confirm your Password"
          />
        </div>

        <button class="save-btn" id="save-btn">Save Changes</button>
      </form>
        
     </div>
    </main>
</div>


<script src="/js/profile.js"></script>