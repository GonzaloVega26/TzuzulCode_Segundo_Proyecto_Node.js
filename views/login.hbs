    <div class="container">
      <div class="form-container">
        <h1 class="title">Login</h1>
        <form action="/login" method="post">
         
          
            <div class="input-box">
              <label for="email"><i class="uil uil-envelope icon"></i> </label>
              <input
                type="mail"
                name="email"
                id="email"
                placeholder="Enter your Email"
              />
            </div>
  
            <div class="input-box">
              <label for="password"><i class="uil uil-lock-alt icon"></i> </label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Enter your Password"
              />
            </div>
  
          
          
          <div class="link">

              <a href="/signupgrid.html" class="link">New Member?</a>
              
        </div>
       {{#unless validation.success}}
            <ul>
            {{#each validation.errors}}
                <li class="text-red-700">
                    {{this}}
                </li>
            {{/each}}
            </ul>
        {{/unless}}
          <div>
            <button class="button">Register</button>
          </div>
        </form>
      </div>
    </div>